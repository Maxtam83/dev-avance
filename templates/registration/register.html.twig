{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <form method="post" class="form-container">
        <h1 class="h3 mb-3 font-weight-normal">Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        <label for="inputUsername">Username</label>
        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control', 'id': 'inputUsername'}}) }}

        <label for="inputEmail">Email</label>
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'id': 'inputEmail'}}) }}

        <label for="inputPassword">Password</label>
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'id': 'inputPassword'}}) }}

        <div class="checkbox mb-3">
            <label>
                {{ form_widget(registrationForm.agreeTerms) }} Agree to terms
            </label>
        </div>

        <button type="submit" class="btn btn-lg btn-primary">Register</button>
        {{ form_end(registrationForm) }}
    </form>
{% endblock %}